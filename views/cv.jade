doctype html
meta(name="viewport" content="width=device-width, initial-scale=1")
link(href="//fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css")
link(href='//fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css')
link(rel="stylesheet" type="text/css" href="style.css")

title
  | CV - 
  =contact.name

.h-resume
  h2.p-name
    span= contact.name
    |, Curriculum Vitae
  .p-summary= summary
  .p-contact.h-card
    span.p-name= contact.name
    a.u-email(href="mailto:#{contact.email}")= contact.email
    ul.p-adr
      each line in contact.address
        li= line
  h2 Personal Projects
  ul.projects
    each entry in personalProjects
      li.project
        .title= entry.title
        .summary= entry.summary
        a.url(href=entry.url) entry.url
  h2 Education
  ul.education
    each entry in education
      li.p-education.h-event
        h3.p-name= entry.summary
        span.dt-start= entry.start
        | &mdash;
        span.dt-end= entry.end
        .p-summary= entry.description
  h2 Experience
  ul.experience
    each entry in experience
      li.p-experience.h-event
        h3.p-name
          =entry.title
          |, 
          each name in entry.employer
            span.employer-name= name
        span.dt-start= entry.start
        | &mdash;
        span.dt-end= entry.end
        .p-summary= entry.description
        if entry.hats
          h3 Roles
          ul.roles
            each hat in entry.hats
              li= hat
  h2 Personal Projects
  ul.personal-projects
    each entry in personalProjects
      h3= entry.title
      p= entry.summary
      a.project-link(href=entry.url)= entry.url
